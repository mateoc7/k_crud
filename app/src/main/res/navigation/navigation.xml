<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/managementUserFragment">
    <fragment
        android:id="@+id/managementUserFragment"
        android:name="com.demo.android.k_crud.management.ManagementUserFragment"
        android:label="fragment_management_user"
        tools:layout="@layout/fragment_management_user" >
        <action
            android:id="@+id/action_managementUserFragment_to_addUserFragment"
            app:destination="@id/addUserFragment" />
        <action
            android:id="@+id/action_managementUserFragment_to_detailUserFragment"
            app:destination="@id/detailUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/addUserFragment"
        android:name="com.demo.android.k_crud.add.AddUserFragment"
        android:label="fragment_add_user"
        tools:layout="@layout/fragment_add_user" >
        <action
            android:id="@+id/action_addUserFragment_to_managementUserFragment"
            app:destination="@id/managementUserFragment"
            app:popUpTo="@id/managementUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailUserFragment"
        android:name="com.demo.android.k_crud.detail.DetailUserFragment"
        android:label="fragment_detail_user"
        tools:layout="@layout/fragment_detail_user" >
        <action
            android:id="@+id/action_detailUserFragment_to_managementUserFragment"
            app:destination="@id/managementUserFragment"
            app:popUpTo="@id/managementUserFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="personId"
            app:argType="long" />
    </fragment>
</navigation>